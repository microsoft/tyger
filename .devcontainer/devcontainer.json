// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.205.2/containers/go
{
  "name": "Tyger",

  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "customizations": {
    "vscode": {
      // Set *default* container specific settings.json values on container create.
      "settings": {
        "editor.formatOnType": true,
        "files.trimFinalNewlines": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,

        "[csharp]": {
          "editor.formatOnSave": true
        },

        "[makefile]": {
          "files.trimTrailingWhitespace": false
        },

        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true,
          "editor.tabSize": 2
        },

        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true,
          "editor.tabSize": 2
        },

        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "gopls": {
          "build.buildFlags": ["-tags=integrationtest"]
        },

        "shellcheck.customArgs": ["-x"],
        "shellcheck.useWorkspaceRootAsCwd": true,

        "files.exclude": {
          "**/bin/": true,
          "**/obj/": true
        },

        "dotnet.automaticallyCreateSolutionInWorkspace": false
      },

      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "foxundermoon.shell-format",
        "GitHub.copilot",
        "golang.go",
        "humao.rest-client",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "ms-dotnettools.csharp",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "timonwong.shellcheck"
      ]
    }
  },

  "mounts": [
    // Bind mount docker socket under an alias to support docker-from-docker
    "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind",
    "source=/tmp,target=/host-tmp,type=bind"
  ],

  "runArgs": ["--network=host"],

  "remoteUser": "vscode",
  "overrideCommand": false,
  "onCreateCommand": ".devcontainer/devcontainer-on-create.sh",

  "containerEnv": {
    "DOCKER_BUIKDKIT": "1",
    "DEVCONTAINER_HOST_HOME": "${localEnv:HOME}",
    "HOST_WORKSPACE_PATH": "${localWorkspaceFolder}",
    "RUN_SECRETS_BASE_PATH": "/host-tmp",
    "RUN_SECRETS_HOST_BASE_PATH": "/tmp"
  },

  "forwardPorts": [
    41087 // This is the port the tyger cli uses for interactive login callback.
  ]
}
