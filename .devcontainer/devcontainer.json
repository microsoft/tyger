// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.205.2/containers/go
{
  "name": "Tyger",

  "image": "compimagdevcontainers.azurecr.io/tyger@sha256:db18c3712de8c8c95d9618a8868a9e80e3dd3adc4d57520c89a86deb444609a1",

  "runArgs": [
    "--init",
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],

  // Set *default* container specific settings.json values on container create.
  "settings": {
    "editor.formatOnType": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "[csharp]": {
      "editor.formatOnSave": true
    },

    "[makefile]": {
      "files.trimTrailingWhitespace": false
    },

    "[jsonc]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.formatOnSave": true,
      "editor.tabSize": 2
    },

    "[json]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.formatOnSave": true,
      "editor.tabSize": 2
    },

    "[python]": {
      "editor.formatOnSave": true,
      "editor.tabSize": 4
    },

    "go.toolsManagement.checkForUpdates": "local",
    "go.useLanguageServer": true,
    "gopls": {
      "build.buildFlags": ["-tags=e2e"]
    },

    "indentRainbow.includedLanguages": ["yaml", "helm"],

    "shellcheck.customArgs": ["-x"],
    "shellcheck.useWorkspaceRootAsCwd": true,

    "files.exclude": {
      "**/bin/": true,
      "**/obj/": true,
      "**/__pycache__": true,
      "**/.pytest_cache": true
    },

    // Python linting.
    "python.analysis.typeCheckingMode": "basic",
    "python.linting.ignorePatterns": ["**/conftest.py", "**/test_*.py"],
    "python.testing.pytestEnabled": true,
    "python.defaultInterpreterPath": "/opt/conda/envs/tyger/bin/python",
    "python.formatting.autopep8Path": "/opt/conda/envs/tyger/bin/autopep8",
    "python.terminal.activateEnvironment": false // Disable the extension calling activate when the integrated terminal launches. We take care of this in ~/.bashrc.
  },

  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "eamodio.gitlens",
    "esbenp.prettier-vscode",
    "foxundermoon.shell-format",
    "golang.go",
    "humao.rest-client",
    "jallen7usa.vscode-cue-fmt",
    "mhutchie.git-graph",
    "ms-azuretools.vscode-docker",
    "ms-dotnettools.csharp",
    "ms-python.python",
    "ms-kubernetes-tools.vscode-kubernetes-tools",
    "oderwat.indent-rainbow",
    "timonwong.shellcheck"
  ],

  "mounts": [
    // Bind mount docker socket under an alias to support docker-from-docker
    "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind",

    // Bind mount the current user's home directory to a read-only location
    // so that we can copy in the az cli cache to the devcontainer.
    "source=${env:HOME}${env:USERPROFILE}/,target=/home/.host,type=bind,readonly"
  ],

  "remoteUser": "vscode",
  "overrideCommand": false,
  "onCreateCommand": ".devcontainer/devcontainer-on-create.sh",

  "containerEnv": {
    "HOST_WORKSPACE_DIR": "${localWorkspaceFolder}", // The host's path to the repo's folder
    "CONTAINER_WORKSPACE_DIR": "${containerWorkspaceFolder}",
    "DOCKER_BUIKDKIT": "1"
  },

  "forwardPorts": [
    41087 // This is the port the tyger cli uses for interactive login callback.
  ]
}
